<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    android:background="@color/WHITE">
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                >

                <RelativeLayout
                    android:layout_weight="10"
                    android:padding="@dimen/activity_8"
                    android:layout_margin="@dimen/activity_8"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scribd_button">

                    <android.support.v7.widget.AppCompatTextView
                        android:text="6"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/tv_book_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:text="〉"
                        android:textSize="20sp"
                        android:textColor="@color/GRAY"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_book_number"
                        android:layout_centerHorizontal="true"
                        android:text="books"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/appCompatTextView"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="10"
                    android:padding="@dimen/activity_8"
                    android:layout_margin="@dimen/activity_8"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scribd_button">

                    <android.support.v7.widget.AppCompatTextView
                        android:text="1991"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/tv_page_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <!--<android.support.v7.widget.AppCompatTextView-->
                        <!--android:text="〉"-->
                        <!--android:textSize="20sp"-->
                        <!--android:textColor="@color/GRAY"-->
                        <!--android:textStyle="bold"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--/>-->

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_page_number"
                        android:layout_centerHorizontal="true"
                        android:text="pages"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/appCompatTextView1"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:padding="@dimen/activity_8"
                    android:layout_margin="@dimen/activity_8"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scribd_button">

                    <android.support.v7.widget.AppCompatTextView
                        android:text="42"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/tv_hour_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <!--<android.support.v7.widget.AppCompatTextView-->
                    <!--android:text="〉"-->
                    <!--android:textSize="20sp"-->
                    <!--android:textColor="@color/GRAY"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--/>-->

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_hour_number"
                        android:layout_centerHorizontal="true"
                        android:text="hours"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/appCompatTextView2"
                        />

                </RelativeLayout>
